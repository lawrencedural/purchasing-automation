# Application Settings
APP_NAME=Trim Ordering Automation
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trim_automation
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# NG System Configuration
NG_DB_HOST=ng-system.example.com
NG_DB_PORT=5432
NG_DB_NAME=ng_database
NG_DB_USER=readonly_user
NG_DB_PASSWORD=your_ng_password

# Tech Pack Storage
TECH_PACK_STORAGE_TYPE=local
TECH_PACK_STORAGE_PATH=/data/techpacks
TECH_PACK_AWS_BUCKET=
TECH_PACK_AZURE_CONTAINER=
TECH_PACK_GOOGLE_BUCKET=

# Pivot API Configuration
PBOT_API_URL=https://pbot.example.com/api/v1
PBOT_API_KEY=your_pbot_api_key_here

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Azure Configuration (if using Azure Blob)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_CONTAINER_NAME=

# Google Cloud Configuration (if using GCS)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
GOOGLE_STORAGE_BUCKET=

# Message Queue
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW_DB_ALEMBIC_REPO=alembic

# API Security
API_KEY=your_secret_api_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# OCR Configuration
OCR_SERVICE=tesseract
TESSERACT_LANG=eng
AWS_TEXTRACT_REGION=us-east-1
GOOGLE_PROJECT_ID=

# Logging
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@example.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_ML_FEATURES=true
ENABLE_OCR=true
ENABLE_AUTO_SUBMIT=false

# Processing Limits
MAX_WORKERS=4
PROCESSING_TIMEOUT=3600
MAX_FILE_SIZE_MB=100

# Data Retention
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

